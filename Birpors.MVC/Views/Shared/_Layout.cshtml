    <script>
        $(document).ready(function(){
            $.ajax({
                url: "/canli-destek/oxunmamis-mesajlar",
                type:"GET",
                success:function(res){
                    if(res.status = 200){
                        $(".message-dropdown .message-notifications").empty();
                        $("#messageDropdown span").text(res.data.length);

                        for(let message of res.data){
                            let element = ` <a class="dropdown-item" href="/canli-destek">
                                        <div class="">
                                            <div class="media notification-new">
                                                <div class="usr-profile-img mr-3">
                                                    <div class="user-profile">
                                                        <div class="">KY</div>
                                                    </div>
                                                </div>
                                                <div class="media-body">
                                                    <p class="meta-user-name mr-3">${message.name} ${message.surname}</p>
                                                    <p class="message-text">${message.text}</p>
                                                    <p class="meta-time align-self-center mb-0">${message.createdDate}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </a>`;
                            $(".message-dropdown .message-notifications").append(element);
                        }
                    }
                }
            })
        })
    </script>
